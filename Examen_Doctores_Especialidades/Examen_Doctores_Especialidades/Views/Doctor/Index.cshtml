@model List<Examen_Doctores_Especialidades.Models.Doctor>

@{
    ViewData["Title"] = "Listado de Doctores";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Asegúrate de tener este layout
}

<h2 class="text-center text-primary mb-4">Listado de Doctores</h2>

<div class="d-flex justify-content-end mb-3">
    <a href="/Doctor/Create" class="btn btn-success">
        <i class="fas fa-user-plus"></i> Registrar nuevo doctor
    </a>
</div>

<table class="table table-striped table-hover table-bordered" id="tablaDoctores">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Email</th>
            <th>Edad</th>
            <th>Estado</th>
            <th>Especialidad</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.IdDoctor</td>
                <td>@doctor.NombreDoctor</td>
                <td>@doctor.ApellidosDoctor</td>
                <td>@doctor.EmailDoctor</td>
                <td>@doctor.EdadDoctor</td>
                <td>@doctor.EstadoDoctor</td>
                <td>@doctor.FkIdEspecialidad?.NombreEspecialidad ?? "Sin especialidad"</td>
                <td class="text-center">
                    <button class="btn btn-secondary btn-sm me-1" disabled>
                        <i class="fas fa-edit"></i> Editar
                    </button>
                    <a href="/Doctor/Delete/@doctor.IdDoctor" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="form-check text-end">
    <input class="form-check-input" type="checkbox" checked disabled>
    <label class="form-check-label text-muted">
        * Algunas funciones están en mantenimiento
    </label>
</div>